<!doctype html>
%html
    %head
        %meta{:charset => "utf-8"}/
        / Always force latest IE rendering engine or request Chrome Frame
        %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
        / Use title if it's in the page YAML frontmatter
        %title= data.page.title || "Outflow"
        = stylesheet_link_tag "bootstrap", "font-awesome" ,"style"
        %script{:src => "http://code.jquery.com/jquery-latest.min.js", :type => "text/javascript"}
        = javascript_include_tag  "bootstrap"
    %body{:class => page_classes}
        .navbar.navbar-fixed-top.navbar-inverse{:role=>"navigation"}
            .container
                .navbar-header
                    %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
                        %span.icon-bar
                        %span.icon-bar
                        %span.icon-bar
                    %a.navbar-brand.logo{:href => "#"}
                        %p{:style=>"text-indent:-99999;"}
                .nav-collapse.collapse.navbar-ex1-collapse.no-padding-bottom
                    %ul.nav.navbar-nav.pull-right.text-center
                        %li.active
                            %a{:href=>"#"}
                                Home
                        %li
                            %a{:href=>"#mission"}
                                About
                        %li
                            %a{:href=>"#contact"}
                                Contact
                        %li
                            %a.btn.btn-primary.btn-xs{:href=>"#"}
                                Donate
                        

        = yield